#include <iostream>
using namespace std;

int main() {
    int arr[] = {4, 7, 1, 9, 12, 5};
    int size = sizeof(arr) / sizeof(arr[0]);
    int key;
    bool found = false;

    cout << "Enter number to search: ";
    cin >> key;

    for (int i = 0; i < size; i++) {
        if (arr[i] == key) {
            found = true;
            cout << "Number found at index " << i << endl;
            break;  // stop search after finding the key
        }
    }

    if (!found) {
        cout << "Number not found in the array." << endl;
    }

    return 0;
}

output:
Enter number to search: 9
Number found at index 3
